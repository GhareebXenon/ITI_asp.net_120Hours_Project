@model Developer
<h1 class="alert alert-warning">Edit Developer</h1>
<form class="col-4" method="post" asp-action="EditCurrent" asp-controller="Developers" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImagePath" />
    <div>
        <label asp-for="ImagePath"></label>
        <input type="file" name="imageFormFile" id="imageFormFile" accept=".png,.jpg,.jpeg" class="form-control" onchange="AddImage()" />
        <div class="col-4">
            <img src="@Model.ImagePath" id="devImage" class="card" style="width:100%; aspect-ratio:1/1" />
        </div>
        <span asp-validation-for="ImagePath"></span>
    </div>
    <div>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="About"></label>
        <textarea asp-for="About" class="form-control"> </textarea>
        <span asp-validation-for="About" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning mt-2">
        Edit
    </button>

</form>
<a asp-controller="Developers" asp-action="GetIndexView" class="btn btn-success mt-2"> <i class="bi bi-arrow-left-circle"></i>Back To List</a>
<br />
<br />
@section Scripts{
    <script>
        function AddImage() {
            document.getElementById('devImage').src = window.URL.createObjectURL(document.getElementById('imageFormFile').files[0]);


        }
    </script>
           }